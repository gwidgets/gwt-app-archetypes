<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
	  
	</ui:style>
	<div>

    <paper-drawer-panel id="paperDrawerPanel">
      <!-- Drawer Scroll Header Panel -->
      <paper-scroll-header-panel drawer="" fixed=""> 
      
        <!-- Drawer Toolbar -->
        <paper-toolbar id="drawerToolbar">
          <span class="menu-name">Menu</span>
        </paper-toolbar>

        <!-- Drawer Content -->
        <paper-menu attr-for-selected="data-route" selected="home" ui:field="paperMenu">
          <a data-route="home" class="link" ui:field="homeLink">
            <iron-icon icon="home"></iron-icon>
            <span>Home</span>
          </a>

          <a data-route="users" class="link" ui:field="usersLink">
            <iron-icon icon="info"></iron-icon>
            <span>Test</span>
          </a>

          <a data-route="contact" class="link" ui:field="contactLink">
            <iron-icon icon="mail"></iron-icon>
            <span>Contact</span>
          </a>
          
          <a data-route="logout" class="link" ui:field="logoutLink">
            <iron-icon icon="mail"></iron-icon>
            <span>Logout</span>
          </a>
          
        </paper-menu>
      </paper-scroll-header-panel>

      <!-- Main Area -->
       <paper-scroll-header-panel main="" id="headerPanelMain" condenses="" keep-condensed-header="">
   
        <!-- Main Toolbar -->
        <paper-toolbar id="mainToolbar" class="tall">
           <paper-icon-button id="paperToggle" icon="menu" paper-drawer-toggle=""></paper-icon-button> 
          

          <span class="space"></span>

          <!-- Toolbar icons -->
          <paper-icon-button icon="refresh"></paper-icon-button>
          <paper-icon-button icon="search"></paper-icon-button>

          <!-- Application name -->
          <div class="middle middle-container">
            <div class="app-name">Spring SSO Test App</div>
          </div>

        
        </paper-toolbar>

        <!-- Main Content -->
        <div class="content">
          <iron-pages attr-for-selected="data-route" selected="home" ui:field="ironPages">
            <section  data-route="home">
              <paper-material class="mainContent" elevation="1">
               <!-- <div>  <button ui:field="getTokenButton">Get Access Token</button>
                <label>Token Content</label><textarea style="width:800px; height:129px;" ui:field="tokenArea"></textarea>
                </div> -->
              </paper-material>
              
            </section>
            
            <section  data-route="users">
              <paper-material class="mainContent" elevation="1">
                
                
                <!--  <div>  <button ui:field="callEndPointButton">Call /foo end point</button>
                <label>Response Content</label><textarea ui:field="endpointArea"></textarea>
                </div> -->
              </paper-material>
            </section>
            
             <section  data-route="contact">
              <paper-material class="mainContent" elevation="1">
                <h2>Contact</h2>
                <p>This is the contact section</p>
              </paper-material>
            </section>
          </iron-pages>
        </div>
      </paper-scroll-header-panel>
    </paper-drawer-panel>
	</div>
	
</ui:UiBinder>